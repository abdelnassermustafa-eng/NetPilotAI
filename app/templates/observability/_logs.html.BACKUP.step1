<!-- ================= LOGS SECTION ================= -->
<div class="bg-white border border-slate-200 rounded-lg p-5 space-y-4">
    <!-- ========================================================= -->
    <!-- üìú LOGS -->
    <!-- ========================================================= -->
    <section class="space-y-4">

        <h2 class="text-xl font-semibold text-slate-800 flex items-center gap-2">
            üìú Logs
        </h2>

        <!-- ================= LOGS OVERVIEW (COLLAPSIBLE) ================= -->
        <details class="bg-amber-50 border border-amber-200 rounded-md p-3 text-sm">
            <summary class="cursor-pointer font-medium text-amber-800">
                Show Logs capabilities & status
            </summary>

            <div class="mt-3 space-y-3 text-slate-700 leading-relaxed">

                <p>
                    Application and infrastructure logs collected from AWS services and the
                    NetPilot AI backend. All logs are presented in a read-only manner to support
                    troubleshooting, auditing, and operational visibility.
                </p>

                <!-- IMPLEMENTED -->
                <p class="font-semibold">‚úÖ Implemented</p>
                <ul class="list-disc list-inside ml-4 space-y-1">
                    <li>
                        <strong>Application Logs (CloudWatch Logs)</strong>
                    </li>
                    <li>
                        <strong>Log Stream Viewer</strong>
                    </li>
                </ul>

                <!-- PARTIALLY IMPLEMENTED -->
                <p class="font-semibold">‚ö†Ô∏è Partially implemented</p>
                <ul class="list-disc list-inside ml-4 space-y-1">
                    <li>
                        <strong>Lambda Logs</strong>
                    </li>
                    <li>
                        <strong>ECS / EC2 Logs</strong>
                    </li>
                </ul>

                <!-- UNDER CONSTRUCTION -->
                <p class="font-semibold">üöß Under construction</p>
                <ul class="list-disc list-inside ml-4 space-y-1">
                    <li>
                        <strong>Kubernetes Logs</strong>
                    </li>
                </ul>

            </div>
        </details>

    </section>

    <!-- LOGS ACTION BAR -->
    <div class="flex items-center justify-between gap-4">

        <!-- AUTO-REFRESH TOGGLE -->
        <label class="flex items-center gap-3 cursor-pointer
                   px-4 py-2 rounded-lg border
                   border-blue-200 bg-blue-50
                   hover:bg-blue-100 transition">

            <input type="checkbox" x-model="autoRefreshLogs" @change="toggleAutoRefresh()" class="rounded border-blue-400
                          text-blue-600 focus:ring-blue-500">

            <span class="font-bold text-blue-800">
                Auto-refresh logs
            </span>

            <span x-show="autoRefreshLogs" class="ml-2 text-xs font-semibold text-blue-700
                         bg-white border border-blue-300
                         px-2 py-0.5 rounded-full">
                ON ¬∑ every 30s
            </span>
        </label>

        <!-- MANUAL REFRESH -->
        <button @click="loadLogs()" class="px-3 py-2 bg-slate-600 text-white rounded
                       hover:bg-slate-500 text-sm">
            Refresh Logs
        </button>
    </div>

    <!-- LOGS TABLE -->
    <div class="overflow-x-auto border border-slate-200 rounded-lg">

        <table class="min-w-full text-sm">
            <thead class="bg-slate-100 text-slate-700">
                <tr>
                    <th class="px-3 py-2 text-left border-b">Time</th>
                    <th class="px-3 py-2 text-left border-b">Level</th>
                    <th class="px-3 py-2 text-left border-b">Message</th>
                </tr>
            </thead>

            <tbody>
                <template x-if="!recentLogs || recentLogs.length === 0">
                    <tr>
                        <td colspan="3" class="px-3 py-4 text-center text-slate-500">
                            No logs available
                        </td>
                    </tr>
                </template>

                <template x-for="log in recentLogs" :key="log.id || log.timestamp">
                    <tr class="border-t">
                        <td class="px-3 py-2 font-mono text-slate-700" x-text="formatTimestamp(log.timestamp)">
                        </td>

                        <td class="px-3 py-2">
                            <span class="px-2 py-0.5 rounded
                                         text-xs font-semibold" :class="levelClass(log.level)"
                                x-text="log.level || '‚Äî'">
                            </span>
                        </td>

                        <td class="px-3 py-2 text-slate-800" x-text="log.message || '‚Äî'">
                        </td>
                    </tr>
                </template>
            </tbody>
        </table>
    </div>

</div>
<!-- =============== END LOGS SECTION =============== -->
